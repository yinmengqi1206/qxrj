/* pages/emotion-selector/emotion-selector.wxss */
.slider-labels {
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
    color: #4b5563;
    margin-top: -10rpx;
  }
  
  /* 情绪图标样式 */
  .flower-purple, .flower-indigo, .circle-blue, .flower-yellow, .flower-gold {
    position: relative;
    width: 320rpx;
    height: 320rpx;
  }
  
  /* 紫色花 */
  .flower-purple::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 128rpx;
    height: 128rpx;
    background-color: #a78bfa;
    border-radius: 50%;
    transform: translate(-50%, -50%);
  }
  
  .flower-purple::after {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 16rpx;
    height: 16rpx;
    background-color: white;
    border-radius: 50%;
    transform: translate(-50%, -50%);
  }
  
  .flower-purple {
    background: radial-gradient(circle, transparent 30%, #ede9fe 30%);
  }
  
