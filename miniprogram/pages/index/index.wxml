<view class="container bg-gray-100">
    <!-- <view class="header p-4 flex items-center bg-white">
        <view class="back-icon text-blue-500">
            <text class="cuIcon-back"></text>
        </view>
        <view class="title text-xl font-medium text-center flex-1">心理状态</view>
        <view class="w-6"></view>
    </view> -->
    <view class="p-4 flex items-center justify-between">
        <image class="calendar" src="../../images/icons/calendar.png" bindtap="toggleCalendar" />
        <view class="text-xl font-medium">{{formattedDate}}</view>
        <button bindtap="startRecording" class="btn btn-blue btn-rounded">记录</button>
    </view>
    <view wx:if="{{showCalendar}}" class="calendar-overlay" bindtap="hideCalendar">
        <calendar view="month" id="calendar" bindclick="calendarBindclick" />
    </view>
    <view class="mx-4 p-6 bg-white rounded-xl">
        <view class="text-center text-gray-500 mb-6">每日心情</view>
        <!-- 有当日情绪时显示 -->
        <view wx:if="{{dailyEmotion}}" class="flex flex-col items-center mb-6">
            <!-- 情绪图标 -->
            <view wx:if="{{dailyEmotion.icon === 'flower-purple'}}" class="w-20 h-20 bg-purple-300 rounded-full flex items-center justify-center mb-4">
                <view class="w-12 h-12 bg-purple-500 rounded-full"></view>
            </view>
            <view wx:elif="{{dailyEmotion.icon === 'flower-indigo'}}" class="w-20 h-20 bg-indigo-300 rounded-full flex items-center justify-center mb-4">
                <view class="w-12 h-12 bg-indigo-500 rounded-full"></view>
            </view>
            <view wx:elif="{{dailyEmotion.icon === 'circle'}}" class="w-20 h-20 bg-sky-200 rounded-full flex items-center justify-center mb-4">
                <view class="w-12 h-12 bg-sky-400 rounded-full"></view>
            </view>
            <view wx:elif="{{dailyEmotion.icon === 'flower-yellow'}}" class="w-20 h-20 bg-yellow-200 rounded-full flex items-center justify-center mb-4">
                <view class="w-12 h-12 bg-yellow-400 rounded-full"></view>
            </view>
            <view wx:elif="{{dailyEmotion.icon === 'flower-gold'}}" class="w-20 h-20 bg-amber-200 rounded-full flex items-center justify-center mb-4">
                <view class="w-12 h-12 bg-amber-400 rounded-full"></view>
            </view>
            <view class="text-2xl font-bold mb-1">{{dailyEmotion.name}}</view>
            <view wx:if="{{dailyEmotion.factors.length > 0}}" class="mt-2 flex flex-wrap justify-center">
                <view wx:for="{{dailyEmotion.factors}}" wx:key="*this" class="text-sm text-gray-500 bg-gray-100 rounded-full px-2 py-1 m-1">
                    {{item}}
                </view>
            </view>
            <!-- 显示详细感受 -->
            <view wx:if="{{dailyEmotion.details.length > 0}}" class="mt-2 flex flex-wrap justify-center">
                <view wx:for="{{dailyEmotion.details}}" wx:key="*this" class="text-sm text-gray-500 bg-gray-100 rounded-full px-2 py-1 m-1">
                    {{item}}
                </view>
            </view>
            <!-- 显示自定义情景 -->
            <view wx:if="{{dailyEmotion.customContext}}" class="mt-2 text-sm text-gray-500 bg-gray-100 rounded-lg p-2 w-full">
                {{dailyEmotion.customContext}}
            </view>
        </view>
        <!-- 没有当日情绪时显示 -->
        <view wx:else class="flex flex-col items-center mb-6 p-8">
            <view class="text-gray-500 mb-4">暂无每日心情记录</view>
        </view>
        <view class="border-t border-gray-200 pt-4">
            <view class="text-gray-500 mb-4">瞬时情绪</view>
            <block wx:if="{{momentaryEmotions.length > 0}}">
                <view wx:for="{{momentaryEmotions}}" wx:key="id" class="flex items-center mb-4">
                    <!-- 情绪图标 -->
                    <view wx:if="{{item.icon === 'flower-purple'}}" class="w-12 h-12 bg-purple-300 rounded-full flex items-center justify-center mr-4">
                        <view class="w-8 h-8 bg-purple-500 rounded-full"></view>
                    </view>
                    <view wx:elif="{{item.icon === 'flower-indigo'}}" class="w-12 h-12 bg-indigo-300 rounded-full flex items-center justify-center mr-4">
                        <view class="w-8 h-8 bg-indigo-500 rounded-full"></view>
                    </view>
                    <view wx:elif="{{item.icon === 'circle'}}" class="w-12 h-12 bg-sky-200 rounded-full flex items-center justify-center mr-4">
                        <view class="w-8 h-8 bg-sky-400 rounded-full"></view>
                    </view>
                    <view wx:elif="{{item.icon === 'flower-yellow'}}" class="w-12 h-12 bg-yellow-200 rounded-full flex items-center justify-center mr-4">
                        <view class="w-8 h-8 bg-yellow-400 rounded-full"></view>
                    </view>
                    <view wx:elif="{{item.icon === 'flower-gold'}}" class="w-12 h-12 bg-amber-200 rounded-full flex items-center justify-center mr-4">
                        <view class="w-8 h-8 bg-amber-400 rounded-full"></view>
                    </view>
                    <view class="flex-1">
                        <view class="font-medium">{{item.name}}</view>
                        <view wx:if="{{item.factors.length > 0}}" class="flex flex-wrap">
                            <view wx:for="{{item.factors}}" wx:for-item="factor" wx:key="*this" class="text-xs text-gray-500 bg-gray-100 rounded-full px-2 py-0-5 mr-1 mt-1">
                                {{factor}}
                            </view>
                        </view>
                        <!-- 显示详细感受 -->
                        <view wx:if="{{item.details.length > 0}}" class="flex flex-wrap">
                            <view wx:for="{{item.details}}" wx:for-item="detail" wx:key="*this" class="text-xs text-gray-500 bg-gray-100 rounded-full px-2 py-0-5 mr-1 mt-1">
                                {{detail}}
                            </view>
                        </view>
                        <!-- 显示自定义情景 -->
                        <view wx:if="{{item.customContext}}" class="text-xs text-gray-500 mt-1">
                            {{item.customContext}}
                        </view>
                    </view>
                    <view class="text-gray-400">{{item.formattedTime}}</view>
                </view>
            </block>
            <view wx:if="{{momentaryEmotions.length === 0}}" class="text-center text-gray-500 p-4">
                暂无瞬时情绪记录，点击"记录"按钮开始记录您的情绪
            </view>
        </view>
    </view>
</view>