/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  position: relative;
}

.container-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: -1;
}

/* 图片预览容器 */
.preview-container {
  width: 100%;
  flex: 1;
  margin: 20rpx;
  border-radius: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.2);
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 使图片充满容器 */
  transition: all 0.3s;
}

.prompt-text {
  color: rgba(255,255,255,0.4);
  font-size: 32rpx;
  position: absolute;
}

/* 输入内容浮动动画 */
.float-text-animation {
  position: fixed;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #fff;
  font-size: 40rpx;
  opacity: 0;
  animation: floatUp 1.5s ease-out;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
}

@keyframes floatUp {
  0% {
    opacity: 1;
    transform: translate(-50%, 0);
  }
  100% {
    opacity: 0;
    transform: translate(-50%, -300rpx);
  }
}

/* 底部输入栏 */
.input-container {
  height: 120rpx;
  margin: 100rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  backdrop-filter: blur(10px);
}

.input-box {
  flex: 1;
  color: #fff;
  font-size: 32rpx;
  height: 100%;
  padding-right: 20rpx;
}

.placeholder {
  color: rgba(255,255,255,0.4);
}

.logo-icon {
  width: 80rpx;
  height: 80rpx;
  transition: all 0.3s;
}

/* 数字徽标 */
.mark {
  color: #1afa29;
  position: absolute;
  top: -15rpx; /* 调整位置 */
  right: -10rpx;
  min-width: 36rpx;
  height: 36rpx;
  padding: 0 8rpx;
  background: #ff4d4f; /* 红色背景 */
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  line-height: 36rpx;
  text-align: center;
  border-radius: 18rpx;
  border: 2rpx solid #fff; /* 白色边框 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transform: scale(0.9);
  transition: all 0.3s ease;
}

.generate-btn {
  position: relative;
  width: fit-content; /* 自适应内容宽度 */
}

.generate-btn:active .logo-icon {
  transform: scale(0.9);
  opacity: 0.8;
}

/* 图片加载状态 */
.loading-circle {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #6366f1;
  border-top-color: transparent;
  border-radius: 50%;
  animation: rotating 1s linear infinite;
}

@keyframes rotating {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 新增底部文字样式 */
.ai-generated-text {
  position: absolute;
  bottom: 20rpx; /* 距离底部距离 */
  left: 50%;
  transform: translateX(-50%);
  color: rgba(255,255,255,0.6); /* 半透明白色 */
  font-size: 24rpx;
  background: rgba(0,0,0,0.3); /* 半透明背景 */
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10px); /* 毛玻璃效果 */
  text-align: center;
}

/* 悬浮气泡容器 */
.floating-share-btn {
  position: fixed;
  right: 20rpx;
  bottom: 100rpx;
  z-index: 9999;
  transition: all 0.3s ease;
}

/* 分享按钮容器 */
.share-btn-wrapper {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  background: transparent;
  border: none;
  padding: 0;
  opacity: 0; /* 让 button 完全透明 */
}

/* 分享图标 */
.share-btn {
  width: 100rpx;
  height: 100rpx;
  transition: all 0.2s ease;
}
