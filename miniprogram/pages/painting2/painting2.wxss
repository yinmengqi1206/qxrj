/* painting2.wxss */
@import "../../styles/paint-common.wxss";

/* 特定页面样式 */
canvas {
  width: 750rpx;
}

/* 涂照片特有样式 */
.failText {
  margin-top: 200rpx;
  text-align: center;
  color: #4b5563;
  font-size: 28rpx;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.photo-container {
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  background: white;
  padding: 20rpx;
}

/* 照片预览 */
.preview-image {
  width: 100%;
  border-radius: 12rpx;
}
