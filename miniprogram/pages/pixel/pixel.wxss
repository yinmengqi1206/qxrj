/* pages/pixel/pixel.wxss */
page {
  background: #fef8f6;
}

canvas {
  width: 100vw;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  background-image: 
    linear-gradient(rgba(200, 200, 200, 0.1) 1px, transparent 1px),
    linear-gradient(90deg, rgba(200, 200, 200, 0.1) 1px, transparent 1px);
  background-size: 20rpx 20rpx;
  border-radius: 16rpx;
  margin: 20rpx 0;
}

.bottom {
  width: 100vw;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  padding: 0 20rpx;
}

.list-item {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  background: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
  image-rendering: pixelated;
}

.list-item::after {
  content: "";
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  background: linear-gradient(45deg, rgba(255, 160, 122, 0.2), rgba(255, 182, 193, 0.2));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.list-item:active {
  transform: scale(0.92);
}

.list-item:active::after {
  opacity: 1;
}

.list-item image {
  width: 44rpx !important;
  height: 44rpx !important;
  opacity: 0.8;
  image-rendering: pixelated;
}

.choose-box {
  width: 100vw;
  position: fixed;
  bottom: 120rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 20rpx 0;
}

.color-box {
  width: 50vw;
  margin: 40rpx auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20rpx;
}

slider {
  margin: 40rpx 60rpx;
}

.text-center {
  text-align: center;
  color: #4b5563;
  font-size: 28rpx;
  padding: 20rpx 0;
  font-family: 'Press Start 2P', monospace;
}

.choose-box-flex {
  display: flex;
  justify-content: space-around;
  width: 100vw;
  position: fixed;
  bottom: 120rpx;
  font-size: 28rpx;
  color: #4b5563;
  text-align: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  padding: 20rpx 0;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.choose-img {
  width: 72rpx;
  height: 72rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  background: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  image-rendering: pixelated;
}

.choose-img:active {
  transform: scale(0.95);
  background: #fef8f6;
}

/* 工具图标样式 */
.tool-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.8;
  image-rendering: pixelated;
}

/* 选中状态 */
.active {
  border: 4rpx solid #ff9f7f !important;
  transform: scale(1.05) !important;
  background: #fff5f2 !important;
}

/* 工具提示 */
.tool-tip {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 12rpx;
  opacity: 0;
  transform: translateY(-4rpx);
  transition: all 0.3s ease;
  font-family: 'Press Start 2P', monospace;
}

.list-item:hover .tool-tip,
.choose-img:hover .tool-tip {
  opacity: 1;
  transform: translateY(0);
}

/* 滑块美化 */
.wx-slider-handle {
  width: 36rpx !important;
  height: 36rpx !important;
  border-radius: 50% !important;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15) !important;
}

slider[data-color="r"] .wx-slider-handle {
  background: rgb(255, 100, 100) !important;
}

slider[data-color="g"] .wx-slider-handle {
  background: rgb(100, 255, 100) !important;
}

slider[data-color="b"] .wx-slider-handle {
  background: rgb(100, 100, 255) !important;
}

slider[data-color="r"] .wx-slider-track {
  background: linear-gradient(to right, rgb(50, 0, 0), rgb(255, 0, 0)) !important;
  height: 6rpx !important;
}

slider[data-color="g"] .wx-slider-track {
  background: linear-gradient(to right, rgb(0, 50, 0), rgb(0, 255, 0)) !important;
  height: 6rpx !important;
}

slider[data-color="b"] .wx-slider-track {
  background: linear-gradient(to right, rgb(0, 0, 50), rgb(0, 0, 255)) !important;
  height: 6rpx !important;
}

/* 按钮选中状态渐变边框 */
.list-item.active::before {
  content: "";
  position: absolute;
  inset: -2rpx;
  padding: 2rpx;
  border-radius: 22rpx;
  background: linear-gradient(45deg, #ffa07a, #ffb6c1);
  -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor;
  mask-composite: exclude;
}

/* 像素画特有样式 */
.pixel-preview {
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border-radius: 16rpx;
  overflow: hidden;
  margin: 20rpx;
  background: white;
  image-rendering: pixelated;
}

/* 网格背景 */
.grid-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  opacity: 0.5;
  background-size: 20rpx 20rpx;
  background-image: linear-gradient(to right, #ddd 1rpx, transparent 1rpx),
    linear-gradient(to bottom, #ddd 1rpx, transparent 1rpx);
}
