.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #f5f5f5;
}

.tabbar {
  display: flex;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #007AFF;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #007AFF;
  border-radius: 2rpx;
}

.emotion-animation-container {
  flex: 1;
  width: 100%;
  height: calc(100vh - 88rpx);
  position: relative;
  background: #fff;
  overflow: hidden;
  padding: 20rpx;
  box-sizing: border-box;
}

.emotion-canvas {
  width: 100%;
  height: 100%;
  display: block;
}

/* 统计页面样式 */
.stats-container {
  width: 100%;
  height: calc(100vh - 100rpx);
  background: #f5f5f5;
  overflow-y: auto;
  padding: 20rpx 20rpx 140rpx 20rpx;
  box-sizing: border-box;
  position: relative;
}

.stats-overview {
  margin-bottom: 20rpx;
}

.stats-section {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
}

.stats-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 20rpx;
}

.stats-distribution {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.stats-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.emotion-bars {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.emotion-bar {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.bar-icon {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

.bar-wrapper {
  flex: 1;
  height: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  overflow: hidden;
}

.bar-fill {
  height: 100%;
  background: #007AFF;
  border-radius: 12rpx;
  transition: width 0.3s ease;
}

.bar-count {
  font-size: 24rpx;
  color: #666;
  width: 60rpx;
  text-align: right;
  flex-shrink: 0;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.stats-value {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.stats-emotion-icon {
  width: 48rpx;
  height: 48rpx;
}

.export-button-container {
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.export-button {
  background: #007AFF;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  width: 100%;
}

.day-group {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.day-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
}

.day-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.day-count {
  font-size: 24rpx;
  color: #666;
  margin-right: 20rpx;
}

.arrow {
  width: 24rpx;
  height: 24rpx;
  border-right: 4rpx solid #999;
  border-bottom: 4rpx solid #999;
  transform: rotate(45deg);
  transition: transform 0.3s;
}

.arrow.expanded {
  transform: rotate(-135deg);
}

.day-emotions {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.5s;
}

.day-emotions.expanded {
  max-height: calc(100vh - 400rpx);
  overflow-y: auto;
}

.emotion-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.emotion-time {
  font-size: 24rpx;
  color: #666;
  width: 120rpx;
  margin-right: 20rpx;
}

.emotion-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.emotion-type-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.emotion-value {
  font-size: 26rpx;
  color: #333;
  margin-right: 20rpx;
}

.emotion-context {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 分析按钮样式 */
.analyze-button-container {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 100;
  width: auto;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.analyze-button {
  padding: 20rpx 40rpx;
  background: #007AFF;
  color: #fff;
  font-size: 30rpx;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
  white-space: nowrap;
}

/* 弹窗样式 */
.emotion-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-height: 80vh;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  animation: modalIn 0.3s ease;
}

@keyframes modalIn {
  from { transform: scale(0.8); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.modal-header {
  padding: 24rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.emotion-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
}

.emotion-name {
  font-size: 30rpx;
  font-weight: bold;
  margin-right: auto;
}

.emotion-time {
  font-size: 24rpx;
  color: #999;
}

.modal-body {
  padding: 24rpx;
  flex: 1;
  overflow-y: auto;
  max-height: 60vh;
}

.emotion-value {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin: 16rpx 0 12rpx;
  display: block;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.context-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.modal-footer {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: center;
}

.modal-btn {
  width: 180rpx !important;
  height: 70rpx !important;
  line-height: 70rpx !important;
  background: #007AFF !important;
  color: #fff !important;
  font-size: 28rpx !important;
  border-radius: 35rpx !important;
  padding: 0 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

/* Loading弹窗样式 */
.loading-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.loading-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 分析结果弹窗样式 */
.analysis-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.analysis-modal .modal-content {
  width: 85%;
  max-height: 85vh;
}

.analysis-modal .modal-header {
  padding: 24rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.analysis-content {
  padding: 24rpx;
  max-height: 60vh;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  white-space: pre-wrap;
}

/* 空数据提示弹窗样式 */
.empty-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.empty-modal .modal-content {
  width: 70%;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  animation: modalIn 0.3s ease;
}

.empty-modal .modal-body {
  padding: 32rpx 24rpx;
  text-align: center;
}

.empty-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
}
