.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #f5f5f5;
}

.tabbar {
  display: flex;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #007AFF;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #007AFF;
  border-radius: 2rpx;
}

.emotion-animation-container {
  flex: 1;
  width: 100%;
  height: calc(100vh - 88rpx);
  position: relative;
  background: #fff;
  overflow: hidden;
}

.emotion-canvas {
  width: 100%;
  height: 100%;
  display: block;
}

/* 弹窗样式 */
.emotion-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-height: 80vh;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  animation: modalIn 0.3s ease;
}

@keyframes modalIn {
  from { transform: scale(0.8); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.modal-header {
  padding: 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.emotion-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.emotion-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: auto;
}

.emotion-time {
  font-size: 24rpx;
  color: #999;
}

.modal-body {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
}

.emotion-value {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0 10rpx;
  display: block;
}

.detail-tags, .factor-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background: rgba(0, 122, 255, 0.1);
  color: #007AFF;
  font-size: 24rpx;
  border-radius: 30rpx;
}

.context-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.modal-footer {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: center;
}

.modal-footer button {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #007AFF;
  color: #fff;
  font-size: 28rpx;
  border-radius: 35rpx;
}
