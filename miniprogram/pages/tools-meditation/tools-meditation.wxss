.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 40rpx;
    box-sizing: border-box;
    background-color: #f8f8f8;
}

.timer {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    margin: 40rpx 0;
}

.time {
    font-size: 96rpx;
    font-weight: bold;
    color: #333;
    font-family: monospace;
}

.controls {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40rpx;
}

.duration-selector {
    display: flex;
    justify-content: center;
    gap: 20rpx;
    width: 100%;
    margin-bottom: 20rpx;
}

.duration-item {
    padding: 20rpx 40rpx;
    background-color: #fff;
    border-radius: 40rpx;
    color: #666;
    font-size: 28rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
}

.duration-item.active {
    background-color: #4CAF50;
    color: #fff;
}

.button {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    font-weight: bold;
    margin: 20rpx 0 40rpx;
    transition: all 0.3s ease;
}

.button.start {
    background-color: #4CAF50;
    color: white;
    box-shadow: 0 4rpx 20rpx rgba(76, 175, 80, 0.3);
}

.button.stop {
    background-color: #f44336;
    color: white;
    box-shadow: 0 4rpx 20rpx rgba(244, 67, 54, 0.3);
}

.tips {
    width: 100%;
    background-color: #fff;
    border-radius: 20rpx;
    padding: 30rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tip-title {
    display: block;
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
}

.tip-content {
    display: block;
    font-size: 28rpx;
    color: #666;
    line-height: 1.6;
    margin: 10rpx 0;
}
