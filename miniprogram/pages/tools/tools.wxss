.tools-container {
    padding: 20rpx;
    background-color: #f5f5f5;
    min-height: 100vh;
}

.tools-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
}

.tool-item {
    background-color: #ffffff;
    border-radius: 12rpx;
    padding: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tool-icon {
    width: 100rpx;
    height: 100rpx;
    margin-bottom: 16rpx;
}

.tool-name {
    font-size: 28rpx;
    color: #333333;
}
